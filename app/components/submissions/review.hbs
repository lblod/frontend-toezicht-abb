{{#if this.initStatuses.lastSuccessful}}
  <div>
    <AuAlert @alertTitle="Medewerkers locatiesecretariaat" @alertsize={{"tiny"}} @alertskin={{"success"}}>
      <label class="au-c-control au-c-control--checkbox">
        <Input @type="checkbox"
               class="au-c-control__input"
               @checked={{this.isHandled}} disabled={{@readonly}} {{on "change" this.toggleIsHandled}} />
        <span class="au-c-control__indicator"></span>
        Melding afgehandeld
      </label>
      <AuLabel for="behandelaar">Behandelaar <span class="au-u-muted au-u-light au-u-italic">en eventueel extra informatie</span></AuLabel>
      <Input id="behandelaar" class="input-field input-field--block" @value={{@model.comment}} disabled={{@readonly}}/>
    </AuAlert>
    <AuButtonGroup>
      <AuButton @disabled={{@readonly}} {{ on "click" this.save }}>Bewaar</AuButton>
      <AuButton @skin="secondary" {{ on "click" this.cancel }}>Sluit venster</AuButton>
    </AuButtonGroup>
  </div>
{{/if}}
